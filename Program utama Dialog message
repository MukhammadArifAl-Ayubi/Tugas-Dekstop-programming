    private void message_dialogMouseClickedActionPerformed(java.awt.event.ActionEvent evt) {                                                           
        // TODO add your handling code here:                                     
        JOptionPane.showMessageDialog(null, "Ini Contoh JOptionPane Message");
    }                                                          

    private void confirm_dialogMouseClickedActionPerformed(java.awt.event.ActionEvent evt) {                                                           
        // TODO add your handling code here:
        int jawab = JOptionPane.showConfirmDialog(null, "Are You Sure?");
        switch(jawab){
            case JOptionPane.YES_OPTION: 
                JOptionPane.showMessageDialog(null, "Anda Memilih Yes");
                break;
            case JOptionPane.NO_OPTION:
                JOptionPane.showMessageDialog(null, "You Memilih No");
                break;
            case JOptionPane.CANCEL_OPTION:
                JOptionPane.showMessageDialog(null, "You Memilih Cancel");
        }
    }                                                          

    private void input_dialogMouseClickedActionPerformed(java.awt.event.ActionEvent evt) {                                                         
        // TODO add your handling code here:
        int angka = Integer.parseInt(JOptionPane.showInputDialog("Masukkan Angka"));  
 
       if(angka%2==0)
            JOptionPane.showMessageDialog(null,"Maaf bilangan yang anda masukkan bukan bilangan ganjil");
        else
            JOptionPane.showMessageDialog(null,"Bilangan " + angka + " adalah bilangan ganjil");
    }                                                        

